<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            prefWidth="375.0" prefHeight="750.0"
            minWidth="375.0" minHeight="750.0"
            maxWidth="375.0" maxHeight="750.0"
            fx:controller="controller.FlashcardDetailController"
            style="-fx-background-color: #F6F7FB;">

    <top>
        <fx:include fx:id="header" source="../components/header.fxml"/>
    </top>

    <!-- CENTER -->
    <center>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox spacing="14" style="-fx-background-color: transparent;">
                    <padding>
                        <!-- bottom 120 keeps space for menu like your other pages -->
                        <Insets top="18" right="18" bottom="20" left="18"/>
                    </padding>

                    <!-- The flip card component -->
                    <fx:include fx:id="flipCard" source="../components/flashcard_flip_card.fxml"/>

                    <!-- Navigation row: <  1 / 20  > -->
                    <HBox alignment="CENTER" spacing="18">
                        <Button fx:id="prevButton"
                                onAction="#prev"
                                style="-fx-background-color: white;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #E6EAF2;
                                       -fx-border-radius: 8;
                                       -fx-padding: 6 10;
                                       -fx-cursor: hand;">
                            <graphic>
                                <Label text="‹"
                                       style="-fx-text-fill: #7A7A7A; -fx-font-size: 16px; -fx-font-weight: 900;"/>
                            </graphic>
                        </Button>

                        <Label fx:id="pageLabel"
                               text="1 / 20"
                               style="-fx-text-fill: #0A0A0A; -fx-font-size: 16px; -fx-font-weight: 400;"/>

                        <Button fx:id="nextButton"
                                onAction="#next"
                                style="-fx-background-color: white;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #E6EAF2;
                                       -fx-border-radius: 8;
                                       -fx-padding: 6 10;
                                       -fx-cursor: hand;">
                            <graphic>
                                <Label text="›"
                                       style="-fx-text-fill: #7A7A7A; -fx-font-size: 16px; -fx-font-weight: 900;"/>
                            </graphic>
                        </Button>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- BOTTOM: your reusable nav -->
    <bottom>
        <AnchorPane prefHeight="95.0" style="-fx-background-color: transparent;">
            <children>
                <fx:include source="../components/menu.fxml"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0"
                            AnchorPane.bottomAnchor="0.0"/>
            </children>
        </AnchorPane>
    </bottom>

</BorderPane>
