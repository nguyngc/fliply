<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.HomeController"
            maxHeight="750.0" maxWidth="375.0"
            minHeight="750.0" minWidth="375.0"
            prefHeight="750.0" prefWidth="375.0"
            style="-fx-background-color: #F6F7FB;"
            xmlns="http://javafx.com/javafx/24.0.1">

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    style="-fx-background: transparent; -fx-background-color: transparent;"
                    vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="18.0" style="-fx-background-color: transparent;">

                    <!-- HEADER -->
                    <StackPane style="-fx-background-color: #3D8FEF;">
                        <VBox alignment="TOP_LEFT" spacing="10.0">
                            <padding>
                                <Insets bottom="24" left="24" right="24" top="24"/>
                            </padding>

                            <HBox spacing="10">
                                <Label style="-fx-text-fill: white; -fx-font-size: 40px; -fx-font-weight: 700;"
                                       text="Hi,"/>
                                <Label fx:id="nameLabel"
                                       style="-fx-text-fill: white; -fx-font-size: 40px; -fx-font-weight: 700;"
                                       text="Student"/>
                            </HBox>

                            <Label fx:id="subtitleLabel"
                                   style="-fx-text-fill: rgba(255,255,255,0.92); -fx-font-size: 24px; -fx-font-weight: 400;"
                                   text="Letâ€™s start learning"/>
                        </VBox>
                    </StackPane>

                    <!-- BODY -->
                    <VBox spacing="10.0">
                        <padding>
                            <Insets bottom="10" left="20" right="20" top="10"/>
                        </padding>

                        <Label text="Latest Class"
                               style="-fx-text-fill: #1F1F39; -fx-font-size: 20px; -fx-font-weight: 500;"/>

                        <!-- latest class injected by controller -->
                        <StackPane fx:id="latestClassHolder"/>

                        <Region prefHeight="20"/>

                        <!-- Quiz section hidden for teacher -->
                        <VBox fx:id="latestQuizSection" spacing="10">
                            <Label text="Latest Quiz"
                                   style="-fx-text-fill: #1F1F39; -fx-font-size: 20px; -fx-font-weight: 500;"/>

                            <StackPane fx:id="latestQuizCardWrapper"
                                       onMouseClicked="#onLatestQuizClicked"
                                       style="-fx-cursor: hand;">
                                <fx:include source="../components/quiz_card.fxml"/>
                            </StackPane>
                        </VBox>

                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <AnchorPane prefHeight="120.0" style="-fx-background-color: transparent;">
            <children>
                <fx:include source="../components/menu.fxml"
                            AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0"/>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
