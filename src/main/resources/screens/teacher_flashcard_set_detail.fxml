<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.TeacherFlashcardSetDetailController"
            prefWidth="375" prefHeight="750"
            style="-fx-background-color: #F6F7FB;"
            stylesheets="@../styles/style.css">

    <top>
        <fx:include fx:id="header" source="../components/header.fxml"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="14">
                    <padding>
                        <Insets top="18" right="18" bottom="140" left="18"/>
                    </padding>

                    <!-- EDIT/ADD FORM (hidden by default) -->
                    <VBox fx:id="editorBox" spacing="12"
                          visible="false" managed="false"
                          style="-fx-background-color: white;
                                 -fx-background-radius: 18;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 14, 0.2, 0, 6);">
                        <padding>
                            <Insets top="16" right="16" bottom="16" left="16"/>
                        </padding>

                        <TextField fx:id="termField"
                                   promptText="Term"
                                   style="-fx-background-color: white;
                                          -fx-background-radius: 14;
                                          -fx-border-color: rgba(31,31,57,0.20);
                                          -fx-border-radius: 10;
                                          -fx-padding: 10 14;
                                          -fx-font-size: 14px;"/>

                        <TextArea fx:id="definitionArea"
                                  promptText="Definition"
                                  prefRowCount="3"
                                  wrapText="true"
                                  styleClass="form-textarea"
                                  style="-fx-background-radius: 14;
                                         -fx-border-color: rgba(31,31,57,0.20);
                                         -fx-border-radius: 10;
                                         -fx-font-size: 14px;"/>

                        <HBox spacing="14">
                            <Button text="Save"
                                    onAction="#onSave"
                                    HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                    style="-fx-background-color: #3D8FEF;
                                           -fx-text-fill: white;
                                           -fx-background-radius: 12;
                                           -fx-font-weight: 500;
                                           -fx-font-size: 14px;
                                           -fx-padding: 10px 32px 10px 32px;
                                           -fx-cursor: hand;"/>

                            <Button text="Cancel"
                                    onAction="#onCancel"
                                    HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                    style="-fx-background-color: white;
                                           -fx-border-color: #3D8FEF;
                                           -fx-border-width: 1;
                                           -fx-text-fill: #3D8FEF;
                                           -fx-background-radius: 12;
                                           -fx-border-radius: 12;
                                           -fx-font-weight: 500;
                                           -fx-font-size: 14px;
                                           -fx-padding: 10px 32px 10px 32px;
                                           -fx-cursor: hand;"/>
                        </HBox>
                    </VBox>

                    <!-- READ-ONLY LIST -->
                    <VBox fx:id="cardsBox" spacing="14"/>

                    <!-- Add more button (bottom of list) -->
                    <Button fx:id="addMoreBtn"
                            text="+ Add more Flashcards"
                            onAction="#onAddMore"
                            prefHeight="60" maxWidth="Infinity"
                            style="-fx-background-color: white;
                                   -fx-background-radius: 18;
                                   -fx-text-fill: #3D8FEF;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: 700;
                                   -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 14, 0.2, 0, 6);"/>

                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <AnchorPane prefHeight="95">
            <children>
                <fx:include source="../components/menu.fxml"
                            AnchorPane.leftAnchor="0"
                            AnchorPane.rightAnchor="0"
                            AnchorPane.bottomAnchor="0"/>
            </children>
        </AnchorPane>
    </bottom>

</BorderPane>
