<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.WelcomeController"
      alignment="CENTER"
      prefWidth="375.0"
      prefHeight="750.0"
      style="-fx-background-color: #D9F4F1;"
      stylesheets="@../styles/style.css">

    <children>

        <VBox alignment="CENTER" spacing="12">
            <ImageView fitHeight="200.0" fitWidth="322.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/welcome_image.png"/>
                </image>
            </ImageView>

            <Label styleClass="title-label" text="Fliply"/>

            <Label styleClass="subtitle-label"
                   text="Quick and Easy Learning"
                   textAlignment="CENTER"
                   wrapText="true"/>
        </VBox>

        <HBox alignment="BOTTOM_CENTER" spacing="12">
            <padding>
                <Insets top="18"/>
            </padding>

            <Button prefWidth="140.0"
                    text="Register"
                    mnemonicParsing="false"
                    onAction="#goRegister"/>

            <Button prefWidth="140.0"
                    text="Login"
                    mnemonicParsing="false"
                    onAction="#goLogin"/>
        </HBox>

    </children>
</VBox>
