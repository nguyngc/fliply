<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AccountPasswordController"
            prefWidth="375" prefHeight="750"
            style="-fx-background-color: #F6F7FB;">

    <top>
        <fx:include fx:id="header" source="../components/header.fxml"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="14">
                    <padding>
                        <Insets top="18" right="18" bottom="18" left="18"/>
                    </padding>

                    <Label text="Current Password"
                           style="-fx-font-size: 14px; -fx-text-fill: #8C8C8C;"/>
                    <PasswordField fx:id="currentPwdField"
                                   promptText="Current password"
                                   style="-fx-background-color: white;
                                          -fx-background-radius: 14;
                                          -fx-border-color: rgba(31,31,57,0.20);
                                          -fx-border-radius: 10;
                                          -fx-padding: 10 14;"/>

                    <Label text="New Password"
                           style="-fx-font-size: 14px; -fx-text-fill: #8C8C8C;"/>
                    <PasswordField fx:id="newPwdField"
                                   promptText="New password"
                                   style="-fx-background-color: white;
                                          -fx-background-radius: 14;
                                          -fx-border-color: rgba(31,31,57,0.20);
                                          -fx-border-radius: 10;
                                          -fx-padding: 10 14;"/>

                    <Label text="Confirm New Password"
                           style="-fx-font-size: 14px; -fx-text-fill: #8C8C8C;"/>
                    <PasswordField fx:id="confirmPwdField"
                                   promptText="Confirm new password"
                                   style="-fx-background-color: white;
                                          -fx-background-radius: 14;
                                          -fx-border-color: rgba(31,31,57,0.20);
                                          -fx-border-radius: 10;
                                          -fx-padding: 10 14;"/>

                    <Label fx:id="errorLabel"
                           text=""
                           visible="false" managed="false"
                           style="-fx-text-fill: #E53935;"/>

                    <HBox spacing="14">
                        <Button text="Save"
                                onAction="#onSave"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                style="-fx-background-color: #3D8FEF;
                                       -fx-text-fill: white;
                                       -fx-background-radius: 12;
                                       -fx-font-weight: 500;
                                       -fx-font-size: 14px;
                                       -fx-padding: 10px 32px 10px 32px;
                                       -fx-cursor: hand;"/>

                        <Button text="Cancel"
                                onAction="#onCancel"
                                HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                style="-fx-background-color: white;
                                       -fx-border-color: #3D8FEF;
                                       -fx-border-width: 1;
                                       -fx-text-fill: #3D8FEF;
                                       -fx-background-radius: 12;
                                       -fx-border-radius: 12;
                                       -fx-font-weight: 500;
                                       -fx-font-size: 14px;
                                       -fx-padding: 10px 32px 10px 32px;
                                       -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <AnchorPane prefHeight="95">
            <children>
                <fx:include source="../components/menu.fxml"
                            AnchorPane.leftAnchor="0"
                            AnchorPane.rightAnchor="0"
                            AnchorPane.bottomAnchor="0"/>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
