<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.components.ClassCardController"
      spacing="18"
      style="-fx-background-color: white;
             -fx-background-radius: 22;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 18, 0.25, 0, 8);
             -fx-cursor: hand;">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <!-- Image -->
    <StackPane prefWidth="130" prefHeight="90"
               style="-fx-background-color: #D9ECFF; -fx-background-radius: 16;">
        <ImageView fitWidth="110" fitHeight="70" preserveRatio="true">
            <image>
                <Image url="@../images/class_card.png"/>
            </image>
        </ImageView>
    </StackPane>

    <!-- Content -->
    <VBox spacing="8" HBox.hgrow="ALWAYS">

        <Label fx:id="classNameLabel"
               text="Class Code"
               style="-fx-text-fill: #2C2C2C; -fx-font-size: 16px; -fx-font-weight: 500;"/>

        <!-- Student variant -->
        <VBox fx:id="studentInfoBox" spacing="0">
            <Label fx:id="teacherNameLabel"
                   text="Teacher's Name"
                   style="-fx-text-fill: #8C8C8C; -fx-font-size: 14px; -fx-font-weight: 400;"/>
        </VBox>

        <!-- Teacher variant -->
        <VBox fx:id="teacherInfoBox" spacing="4" visible="false" managed="false">
            <Label fx:id="studentsCountLabel"
                   text="25 students"
                   style="-fx-text-fill: #8C8C8C; -fx-font-size: 14px; -fx-font-weight: 400;"/>
            <Label fx:id="setsCountLabel"
                   text="5 set of flashcards"
                   style="-fx-text-fill: #8C8C8C; -fx-font-size: 14px; -fx-font-weight: 400;"/>
        </VBox>

        <Label fx:id="progressTextLabel"
               text="60% Completed"
               style="-fx-text-fill: #3D8FEF; -fx-font-size: 12px; -fx-font-weight: 400;"/>

        <ProgressBar fx:id="progressBar"
                     progress="0.6"
                     prefWidth="210"
                     style="-fx-accent: #3D8FEF;"
                     stylesheets="@../styles/progress_bar.css"
                     styleClass="progress-bar"/>
    </VBox>

</HBox>
