<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.components.HeaderController"
           style="-fx-background-color: #3D8FEF;">

    <HBox alignment="TOP_LEFT" spacing="16" StackPane.alignment="TOP_LEFT">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <Button fx:id="backButton"
                onAction="#onBack"
                visible="false"
                managed="false"
                style="-fx-background-color: white;
                       -fx-background-radius: 16;
                       -fx-cursor: hand;">
            <graphic>
                <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@../images/back_arrow.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 0 0 0 0;" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLabel"
                   text="Title"
                   wrapText="true"
                   maxWidth="260"
                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: 700;"/>

            <Label fx:id="subtitleLabel"
                   text=""
                   visible="false"
                   managed="false"
                   style="-fx-text-fill: rgba(255,255,255,0.92); -fx-font-size: 20px; -fx-font-weight: 400;"/>

            <HBox fx:id="metaRow" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false">
                <ImageView fx:id="metaIcon" fitWidth="22" fitHeight="22" preserveRatio="true">
                    <image>
                        <Image url="@../images/people_icon.png"/>
                    </image>
                </ImageView>

                <Label fx:id="metaLabel"
                       text=""
                       style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 24px; -fx-font-weight: 400;"/>

                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </HBox>
</StackPane>
