<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.components.HeaderController"
           style="-fx-background-color: #3D8FEF;">

    <HBox alignment="CENTER_LEFT" spacing="16" StackPane.alignment="TOP_LEFT">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <!-- Back -->
        <Button fx:id="backButton"
                onAction="#onBack"
                visible="false"
                managed="false"
                style="-fx-background-color: white;
                       -fx-background-radius: 10;
                       -fx-padding: 5 0;
                       -fx-cursor: hand;">
            <graphic>
                <ImageView fitWidth="30" fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@../images/back_arrow.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Title area -->
        <VBox spacing="10" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
            <Label fx:id="titleLabel"
                   text="Title"
                   wrapText="true"
                   maxWidth="260"
                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: 700;"/>

            <Label fx:id="subtitleLabel"
                   text=""
                   visible="false"
                   managed="false"
                   style="-fx-text-fill: rgba(255,255,255,0.92); -fx-font-size: 20px; -fx-font-weight: 400;"/>

            <HBox fx:id="metaRow" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false">
                <ImageView fx:id="metaIcon" fitWidth="22" fitHeight="22" preserveRatio="true">
                    <image>
                        <Image url="@../images/people_icon.png"/>
                    </image>
                </ImageView>

                <Label fx:id="metaLabel"
                       text=""
                       style="-fx-text-fill: rgba(255,255,255,0.95); -fx-font-size: 24px; -fx-font-weight: 400;"/>
            </HBox>
        </VBox>

    </HBox>

    <!-- More (â‹¯) -->
    <Button fx:id="moreButton"
            onAction="#onMore"
            visible="false"
            managed="false"
            StackPane.alignment="TOP_RIGHT"
            style="-fx-background-color: transparent;
                   -fx-cursor: hand;
                   -fx-padding: 16 20 0 0;">
        <graphic>
            <ImageView fx:id="moreIcon" fitWidth="22" fitHeight="22" preserveRatio="true">
                <image>
                    <Image url="@../images/more_icon.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
</StackPane>
